input {
    keyboard {
        xkb {
            layout "us"
            variant "altgr-intl"
            options "ctrl:nocaps"
        }
    }

    touchpad {
        tap
        natural-scroll
    }
}

binds {
    Mod+Return { spawn "ghostty"; }
    Mod+Space { spawn "launcher"; }
}

window-rule {
    open-maximized true
    draw-border-with-background false

    focus-ring {
        width 2
        active-color "#b18ef9"
    }
}

spawn-at-startup "wallpaper"
